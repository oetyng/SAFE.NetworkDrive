<Window x:Class="SAFE.NetworkDrive.UI.EditDrive"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAFE.NetworkDrive.UI"
        mc:Ignorable="d"
        Title="Edit drive" Height="148.409" Width="244.333" Icon="../Resources/favicon_white.ico">
    <Grid Margin="0,0,2,0">
        <Button Name="BtnOK" Content="Apply" HorizontalAlignment="Left" Margin="96,67,0,0" 
                VerticalAlignment="Top" Width="120" Click="BtnOK_Click" Height="22"/>
        <Label Content="Drive letter:" HorizontalAlignment="Left" Margin="14,14,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.479,0.538"/>
        <ComboBox Name="CmbDriveLetters" HorizontalAlignment="Left" Margin="96,18,0,0" VerticalAlignment="Top" Width="51" RenderTransformOrigin="0.458,-0.167" SelectionChanged="CmbDriveLetters_SelectionChanged"/>
    </Grid>
</Window>